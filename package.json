{
  "name": "smart-seven",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "vite --open",
    "dev": "vite --host",
    "lint": "eslint .",
    "build": "vue-tsc --noEmit && vite build",
    "serve": "vite preview",
    "test": "start-server-and-test firebase:emulator ':3000|:9099|http-get://localhost:8082' 'cypress run'",
    "test:local": "start-server-and-test dev 'http-get://localhost:3000' firebase:emulator-nohost ':9099|http-get://localhost:8082' 'cypress open'",
    "cypress:run": "cypress run",
    "firebase:update-fixtures": "firebase emulators:export cypress/dump",
    "cypress:open": "cypress open",
    "firebase:emulator": "firebase emulators:start --import cypress/dump",
    "firebase:emulator-nohost": "firebase emulators:start --only=firestore,auth --import cypress/dump"
  },
  "dependencies": {
    "@headlessui/vue": "1.6.7",
    "@heroicons/vue": "1.0.6",
    "@types/linkify-it": "^3.0.2",
    "@vueuse/core": "9.1.0",
    "array-move": "^4.0.0",
    "firebase": "9.9.2",
    "moment": "2.29.4",
    "nanoid": "4.0.0",
    "pinia": "2.0.17",
    "vue": "3.2.37",
    "vue-create-ripple": "0.3.1",
    "vue-router": "4.1.3"
  },
  "eslintIgnore": [
    "dist/**",
    "node_modules/**"
  ],
  "devDependencies": {
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rushstack/eslint-patch": "1.1.4",
    "@tailwindcss/typography": "0.5.4",
    "@types/node": "16.11.47",
    "@vitejs/plugin-vue": "2.3.3",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "11.0.0",
    "autoprefixer": "10.4.8",
    "cypress": "10.4.0",
    "eslint": "8.21.0",
    "eslint-plugin-cypress": "^2.12.1",
    "firebase-tools": "11.4.0",
    "postcss": "8.4.14",
    "prettier": "2.7.1",
    "sass": "1.53.0",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "3.1.7",
    "typescript": "4.7.4",
    "vite": "2.9.14",
    "vite-plugin-pwa": "0.12.3",
    "vue-tsc": "0.39.2"
  }
}
